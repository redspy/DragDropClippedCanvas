<Window x:Class="DragDropClippedCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragDropClippedCanvas"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="768"
        Width="1024">
    <Grid>
        <Canvas x:Name="MainCanvas"
                Width="1024"
                Height="768"
                Background="LightGray">
            <Rectangle x:Name="DraggableRectangle"
                    Width="{Binding RectangleWidth}"
                    Height="{Binding RectangleHeight}"
                    Fill="Blue"
                    Canvas.Left="{Binding RectangleLeft}"
                    Canvas.Top="{Binding RectangleTop}"
                    MouseWheel="DraggableRectangle_MouseWheel"
                    MouseLeftButtonDown="DraggableRectangle_MouseLeftButtonDown"
                    MouseMove="DraggableRectangle_MouseMove"
                    MouseLeftButtonUp="DraggableRectangle_MouseLeftButtonUp"/>
        </Canvas>
    </Grid>
</Window>
